.group
  = f.label :weburl, t("activerecord.attributes.website.weburl", :default => "Origin Server"), :class => :label
  = f.text_field :weburl, :class => 'text_field'
  %span.description Do NOT include http://
.group
  = f.label :vhost, t("activerecord.attributes.website.vhost", :default => "Virtual Host"), :class => :label
  = f.text_field :vhost, :class => 'text_field'
  %span.description Do NOT include http://
.group
  = f.label :ttl, t("activerecord.attributes.website.ttl", :default => "Ttl"), :class => :label
  = f.number_field :ttl, :class => 'number_field', :value => '600'
  %span.description Ex: a simple text
.group
  = f.label :active, t("activerecord.attributes.website.active", :default => "Active"), :class => :label
  = f.check_box :active, :class => 'check_box'
  %span.description Ex: a simple text
.group
  = f.label :paid, t("activerecord.attributes.website.paid", :default => "Paid"), :class => :label
  = f.check_box :paid, :class => 'check_box'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), websites_path, :class => "text_button_padding link_button"
