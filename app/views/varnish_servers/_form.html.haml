.group
  = f.label :title, t("activerecord.attributes.varnish_server.title", :default => "Title"), :class => :label
  = f.text_field :title, :class => 'text_field'
  %span.description What do we call this server.
.group
  = f.label :region, t("activerecord.attributes.varnish_server.region", :default => "Region"), :class => :label
  = f.text_field :region, :class => 'text_field'
  %span.description Region
.group
  = f.label :ip, t("activerecord.attributes.varnish_server.ip", :default => "Ip"), :class => :label
  = f.text_field :ip, :class => 'text_field'
  %span.description IP Address
.group
  = f.label :port, t("activerecord.attributes.varnish_server.port", :default => "Port"), :class => :label
  = f.text_field :port, :class => 'text_field'
  %span.description Port to Distribute VCL - usually 22
.group
  = f.label :vcluster_id, t("activerecord.attributes.varnish_server.vcluster_id", :default => "Cluster"), :class => :label
  = f.text_field :vcluster_id, :class => 'text_field'
  %span.description Cluster
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), varnish_servers_path, :class => "text_button_padding link_button"
