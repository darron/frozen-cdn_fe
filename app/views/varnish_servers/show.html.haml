.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", varnish_servers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_varnish_server_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", varnish_server_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.varnish_server.title", :default => t("activerecord.labels.title", :default => "Title"))
          \:
        = @varnish_server.title
      %p
        %b
          = t("activerecord.attributes.varnish_server.region", :default => t("activerecord.labels.region", :default => "Region"))
          \:
        = @varnish_server.region
      %p
        %b
          = t("activerecord.attributes.varnish_server.ip", :default => t("activerecord.labels.ip", :default => "Ip"))
          \:
        = @varnish_server.ip
      %p
        %b
          = t("activerecord.attributes.varnish_server.port", :default => t("activerecord.labels.port", :default => "Port"))
          \:
        = @varnish_server.port
      %p
        %b
          = t("activerecord.attributes.varnish_server.vcluster_id", :default => t("activerecord.labels.vcluster_id", :default => "Cluster"))
          \:
        = @varnish_server.vcluster_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_varnish_server_path(@varnish_server), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), varnish_server_path(@varnish_server), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
